import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
		
  int n ;
       Scanner sc = new Scanner(System.in);
       n = sc.nextInt();
       
    for (int i= 1; i<= n; i++)  
    {  
    //outer loop  
    for (int j=1; j<=n-i; j++)  
    {  
    System.out.print(" ");  
    }  
    for (int k=i;k>i-i;k--)  
    {  
    System.out.print(k+"");  
    }   
    System.out.println("");  
    }  
    }  
    }  
     
    
   
